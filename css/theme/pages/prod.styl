#product_addtocart_form
    flex-wrap: wrap
    gap: gap

.prod
    &__img
        flex: 1
        margin: 0
        min-width: 0

    &__shop
        flex: 0 1 430px
        min-width: 0

        .col
            flex: 1
            min-width: 0

        .product-rate
            display: flex
            align-items: center
            margin-bottom: 10px

            .to-rate
                font-weight: regular
                font-size: 12px

    &__name
        &--desktop
            @media media-max-lg
                display: none !important

        &--mobile
            display: flex
            color: var(--color-text-gray)
            text-transform: uppercase
            font-weight: bold
            font-size: 18px

            .button
                margin-right: 10px

            @media media-min-lg
                display: none !important

        h1
            color: var(--color-text-gray)
            font-weight: regular
            font-size: 18px
            line-height: 1.3

            @media media-min-lg
                font-size: 24px

    &__head
        display: flex
        justify-content: space-between
        align-items: center
        padding: 5px 0 10px
        gap: (gap / 2)

        &, .sku
            color: var(--color-text-gray)
            font-weight: regular
            font-size: 12px

        .brand
            display: flex
            align-items: center
            padding: 0

            &:before
                content: 'Fabricante: '

            img
                width: auto
                height: 20px
                object-fit: contain
                object-position: center

    &__call-to-action
        padding-top: (gap / 2)

        .add-to-cart
            margin-bottom: 0

        .add-to-cart-btn
            padding: 0
            height: 50px
            border-radius: 0
            box-shadow: none
            text-transform: lowercase
            font-weight: regular
            font-size: 24px
            line-height: 50px

            .ico
                display: inline-block
                margin-top: -2px
                margin-right: 7px
                width: 24px
                height: 24px
                vertical-align: middle
                fill: currentColor

        .add-to-cart-buttons
            display: flex
            gap: 16px

            .qty-wrapper
                flex: 0 0 70px

                @media media-max-lg
                    display: none

    &__payments
        display: block
        margin-top: gap
        color: var(--color-text-gray-light)
        text-decoration: underline
        font-weight: regular
        font-size: 14px

// Ajuste imagem principal
.product-image-gallery
    box-shadow: none

.product-image-thumbs
    .thumb-link
        border-radius: 0
        box-shadow: none

.product-collateral
    [class*='__title'].title
        titleCollateral()

@media media-min-lg
    .product-image-container
        display: flex
        gap: gap

    .product-image
        flex: 1
        min-width: 0

    .more-views
        flex: 0 1 90px
        order: -1

    .product-image-thumbs
        display: block

        .thumb-link
            &:hover, &.on
                box-shadow: 0 0 0 1px var(--primary-hover)

@media media-max-lg
    .product-image-thumbs
        justify-content: center