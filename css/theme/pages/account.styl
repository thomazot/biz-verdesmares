.accountlogin
    text-align: center

    .title
        color: var(--primary)
        font-weight: regular
        font-size: 18px

        @media media-min-lg
            font-size: 24px

    &__registered
        .forgot
            position: static
            display: block
            margin-top: 5px
            color: var(--color-text-gray)
            text-align: right
            text-decoration: underline
            font-weight: regular
            font-size: 12px

        .form-list .fields > .actions
            flex: 0 0 100%

            .btn
                width: 100%
                height: 40px
                border: 0
                border-radius: 0
                background: var(--button)
                text-transform: uppercase
                font-weight: bold
                font-size: 14px

    &__new
        .buttons-set
            .btn
                width: 100%
                height: 40px
                border: 0
                border-radius: 0
                background: var(--button)
                box-shadow: none
                color: var(--button-contrast)
                text-transform: uppercase
                text-shadow: none
                font-weight: bold
                font-size: 14px

.account-create
    form
        margin-top: 80px

    .subtit, .form-instructions
        display: none

.form-list .fields.tipopessoa
    margin-top: -60px

    input
        position: absolute
        visibility: hidden

    label
        &, &.on
            color: var(--color-text-gray)
            font-weight: semi-bold
            font-size: 14px