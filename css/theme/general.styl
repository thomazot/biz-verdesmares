
/**
 * Mixins
 */
icon(i)
    content: i
    text-transform: none
    font-weight: normal
    font-style: normal
    font-variant: normal
    font-family: 'biz_icons'
    speak: none
    -moz-osx-font-smoothing: grayscale
    -webkit-font-smoothing: antialiased

/**
 * Mixin - Font-weight
 */
font = 'Montserrat', sans-serif
light = 300
regular = 400
medium = 500
semi-bold = 600
bold = 700
extra-bold = 800
balck = 900
/**
 * Mixin - Viewport
 */
viewport = 1200px
gap = 32px
/**
 * Mixin - Responsive
 */
screen-sm = 569px
screen-md = 769px
screen-lg = 993px
screen-sm-max = (screen-sm - 1)
screen-md-max = (screen-md - 1)
screen-lg-max = (screen-lg - 1)

minw(w)
    return unquote('(min-width:' + w + ')')

maxw(w)
    return unquote('(max-width:' + w + ')')

media-min-sm = minw(screen-sm)
media-min-md = minw(screen-md)
media-min-lg = minw(screen-lg)
media-max-sm = maxw(screen-sm-max)
media-max-md = maxw(screen-md-max)
media-max-lg = maxw(screen-lg-max)

container()
    margin-right: auto
    margin-left: auto
    max-width: 'calc(100% - %s)' % gap
    width: viewport

shadowBorder()
    @media media-min-lg
        box-shadow: 800px 0 0 @background, -800px 0 0 @background

    @media media-max-lg
        box-shadow: 280px 0 0 @background, -280px 0 0 @background

titleCollateral()
    margin-bottom: gap
    padding: 10px 0
    border-bottom: solid 2px var(--color-border-gray)
    color: var(--primary-hover)
    text-transform: uppercase
    font-weight: 800
    font-size: 18px
    line-height: 1

    @media media-min-lg
        text-align: center
        font-size: 24px

    @media media-max-lg
        display: block
        margin-right: -(gap / 2)
        margin-left: -(gap / 2)
        padding-right: (gap / 2)
        padding-left: (gap / 2)
        width: 'calc(100% + %s)' % gap

selectFake()
    display: inline-block
    padding: 0 (gap / 2)
    padding-right: 40px
    height: 35px
    border: solid 1px var(--color-border-gray)
    border-radius: 0
    background: #fff no-repeat url(select) center right 10px
    box-shadow: none
    color: var(--color-text-gray)
    font-weight: medium
    font-size: 14px
    appearance: none