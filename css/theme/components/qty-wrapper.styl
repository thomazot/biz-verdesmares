.qty-wrapper
    height: 50px

    input
        width: 100%
        height: 100%
        border: solid 1px var(--color-border-gray)
        border-radius: 0
        background: var(--color-gray)
        box-shadow: none
        color: var(--color-text-gray)
        font-weight: bold
        font-size: 21px

    .input-box
        padding-right: 20px
        height: 100%

    .bt-box
        right: 0
        height: 100%
        border-radius: 0
        box-shadow: none

    .bt
        &.plus, &.less
            display: flex
            justify-content: center
            align-items: center
            width: 20px
            height: 50%
            border-radius: 0
            background: var(--primary)
            color: var(--primary-contrast)

            &:hover
                background: var(--primary-hover)
                color: var(--primary-hover-contrast)