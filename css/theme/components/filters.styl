.filters
    .title
        @media media-min-lg
            display: none

        @media media-max-lg
            visibility: hidden
            opacity: 0

    &.on .title
        @media media-max-lg
            visibility: visible
            opacity: 1

    &__show
        display: flex
        justify-content: center
        align-items: center
        margin-bottom: (gap / 2)
        padding: 0
        width: 100%
        height: 38px
        border-radius: 0
        text-transform: uppercase
        font-weight: regular
        font-size: 12px

        @media media-min-lg
            display: none

        &:before
            icon('\f0b0')

            margin-top: -2px
            margin-right: 5px

    &__name
        color: white
        font-weight: bold
        font-size: 14px

    &__filter
        .a--0
            line-height: 1.5

            &, &current
                color: white
                font-weight: regular
                font-size: 12px

        .a--1
            color: white

        &.category
            .count
                display: none

            .ul--2
                padding-left: 16px

    @media media-min-lg
        &__filter
            &, &:hover
                box-shadow: inset 0 0 0 1px var(--color-gray)

            .a--0
                &, &current
                    color: var(--color-text-gray)

            &.category
                .a--1
                    color: var(--prinary-hover)

        &__name
            color: var(--primary-hover)