.price-box
    .products__case &
        display: flex
        margin: -5px
        margin-top: auto
        margin-bottom: 7px

        .regular-price, .special-price, .old-price, .minimal-price
            display: inline-block
            padding: 5px

            .price span
                font-weight: medium
                font-size: 14px

        .regular-price, .special-price, .minimal-price
            .label
                display: none

        .old-price
            .label
                display: none

.price-box-parcelado
    .products__case &
        margin-bottom: 0

        &:empty, .upto
            display: none

        &, .num span, .de span, .value span, .s-juros span, .c-juros span
            color: var(--color-payment)
            font-weight: medium
            font-size: 12px

.preco-parcelado-sem-juros
    .products__case &
        + .preco-parcelado
            display: none

.price-box-avista
    .products__case &
        display: flex
        flex-flow: row wrap
        margin-top: 10px
        margin-bottom: 0
        padding-top: 10px
        border-top: solid 1px var(--color-gray)
        line-height: 1.3

        .price
            flex: 0 0 auto
            order: -1

            span
                font-weight: bold
                font-size: 16px

        .label
            flex: 0 0 100%
            min-width: 0

            span
                color: var(--primary-hover)
                font-weight: bold
                font-size: 12px
