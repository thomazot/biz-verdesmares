.mymenu
    &#top-menu
        .ul--0
            container()

            display: flex
            justify-content: space-between
            align-items: center
            height: 32px

            @media media-min-lg
                gap: gap

        .li--0
            margin-bottom: 0

            @media media-max-lg
                display: none

                &:nth-child(1), &:nth-child(2)
                    display: block

        .a--0
            color: var(--color-text-gray)
            text-transform: uppercase
            font-weight: semi-bold
            font-size: 10px

            @media media-min-lg
                font-size: 11px