.mymenu
    &#top-menu
        .ul--0
            container()

            display: flex
            justify-content: space-between
            align-items: center
            height: 32px

            @media media-min-lg
                gap: gap

        .li--0
            margin-bottom: 0

            @media media-max-lg
                display: none

                &:nth-child(1), &:nth-child(2)
                    display: block

        .a--0
            color: var(--color-text-gray)
            text-transform: uppercase
            font-weight: semi-bold
            font-size: 10px

            @media media-min-lg
                font-size: 11px

    &#todas-as-categorias
        display: none
        margin-top: -(gap / 2)
        padding: 30px 0
        background: var(--color-gray)

        @media media-min-lg
            display: block

        &:before
            display: block
            margin: (gap / 2) auto
            padding: (gap / 2) 0
            border-bottom: solid 1px #ccc
            color: var(--primary)
            content: 'Todas as categorias'
            text-align: center
            text-transform: uppercase
            font-weight: bold
            font-size: 18px
            line-height: 1

            container()

        .ul--0
            display: flex
            justify-content: space-between
            gap: gap

            container()

        a
            color: var(--color-text-gray)
            font-weight: light
            line-height: 1.5

        .a--0
            font-size: 24px

        .a--1, .a--2
            font-size: 12px

        .a--1
            text-transform: uppercase
