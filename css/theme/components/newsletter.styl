.newsletter
    --bg-icon: #209F4B

    &
        position: relative
        margin-top: gap
        background: var(--primary)

        @media media-min-lg
            display: flex
            justify-content: flex-start
            align-items: center
            height: 225px

    &__name, &__email, &__submit
        padding-right: 6px
        padding-left: 6px

    &__name, &__email
        @media media-min-lg
            flex: 1 1 30%

    &__form
        container()

        @media media-min-lg
            padding-left: 240px

        @media media-max-lg
            display: block
            padding: gap 0

        .input-text
            height: 56px
            border-radius: 0
            box-shadow: none

    &__text
        .title
            color: var(--primary-contrast)
            text-transform: uppercase
            font-weight: light
            font-size: 24px

    &__btn
        height: 56px
        border-radius: 0
        background: var(--button)
        box-shadow: none
        color: var(--button-contrast)
        text-transform: uppercase
        font-weight: 800
        font-size: 18px

    .icon
        position: absolute
        top: 50%
        display: flex
        justify-content: center
        align-items: center
        margin-top: -96px
        margin-right: 30px
        margin-left: -240px
        width: 190px
        height: 190px
        border-radius: 50%
        background: var(--bg-icon)
        color: var(--primary-hover)

        @media media-max-lg
            display: none

        .ico
            flex: 0 0 112px
            margin-left: 125px
            width: 112px
            height: 90px
            fill: currentColor
