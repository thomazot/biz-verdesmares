.products
    position: relative
    z-index: 10

    &:hover
        z-index: 20

    .owl
        &-pagination
            display: none

        &-wrapper-outer
            margin-bottom: -50px
            padding-bottom: 50px

    &__title
        margin-bottom: gap
        padding: (gap / 2) 0
        border-bottom: solid 2px var(--color-gray)
        color: var(--primary-hover)
        text-align: center
        text-transform: uppercase
        font-weight: 900
        font-size: 18px

        @media media-min-lg
            font-size: 24px

    &__list, .carrossel &__list
        margin: 0 - (gap / 2)

        @media media-max-lg
            margin: -(gap / 2)
            padding: (gap / 2)

        .owl-wrapper-outer
            @media media-max-lg
                margin: -2px
                padding: 2px
                width: auto !important

    &__item, .carrossel &__item
        padding: (gap / 2)

        @media media-max-lg
            padding: 0

    &__case
        padding: 10px
        box-shadow: 0 0 0 1px var(--color-gray)
        transition: all .2s ease-in-out

        &:hover
            @media media-min-lg
                box-shadow: inset 0 0 0 1px var(--color-gray), 0 0 10px rgba(0, 0, 0, .2)

    &__name
        display: block
        margin: 10px 0
        color: var(--color-text-gray)
        font-weight: medium
        font-size: 13px
        line-height: 1.3

    &__main
        display: flex
        flex: 1
        flex-flow: column nowrap
        min-height: 0

    &__actions
        @media media-max-lg
            display: none

        @media media-min-lg
            position: absolute
            top: 100%
            left: 0
            visibility: hidden
            padding: 10px
            width: 100%
            background: white
            box-shadow: inset 0 0 0 1px var(--color-gray), 0 0 10px rgba(0, 0, 0, .2)
            opacity: 0
            transition: all .2s ease-in-out
            transform: translateY(-5px)

            &:before
                position: absolute
                bottom: calc(100% - 1px)
                left: 1px
                width: calc(100% - 2px)
                height: 10px
                background: white
                content: ''

            .products__case:hover &
                visibility: visible
                opacity: 1
                transform: translateY(0)

        .button
            display: flex
            justify-content: center
            align-items: center
            padding: 0
            width: 100%
            height: 40px
            border: 0
            border-radius: 0
            background: var(--button)
            color: var(--button-contrast)
            text-transform: uppercase
            font-weight: medium
            font-size: 14px

            &:hover
                @media media-min-lg
                    background: var(--button-hover)
                    color: var(--button-hover-contrast)