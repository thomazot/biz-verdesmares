#mais-buscadas
    margin: gap 0
    background: none

    container()

    &:before
        display: block
        padding: gap 0
        color: var(--primary-hover)
        content: 'Categorias Mais Buscadas'
        text-align: center
        text-transform: uppercase
        font-weight: bold
        font-size: 18px

        @media media-min-lg
            font-size: 24px

    .ul--0
        align-items: flex-start
        margin: -10px
        width: auto !important
        gap: 20px

        .owl
            &-prev
                margin-left: -6px

            &-next
                margin-right: -6px

    .li--0
        flex: 1
        padding: 10px
        min-width: 0

    .a--0
        display: block
        padding: 0
        height: auto
        color: var(--primary)
        font-weight: medium
        font-size: 12px
        line-height: 1.3

        @media media-min-lg
            font-size: 14px

        span
            display: block
            margin-top: 10px

        img
            margin: 0
            max-width: 100%
            max-height: none
            width: 150px
            height: auto
            object-fit: cover
