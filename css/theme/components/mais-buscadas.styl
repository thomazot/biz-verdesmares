#mais-buscadas
    background: none

    &:before
        display: block
        padding: gap 0
        color: var(--primary-hover)
        content: 'Categorias Mais Buscadas'
        text-align: center
        text-transform: uppercase
        font-weight: bold
        font-size: 24px

    .ul--0
        align-items: flex-start
        gap: 20px

    .li--0
        flex: 1
        min-width: 0

    .a--0
        display: block
        padding: 0
        height: auto
        color: var(--primary)
        font-weight: medium
        font-size: 14px
        line-height: 1.3

        span
            display: block
            margin-top: 10px

        img
            margin: 0
            max-width: 100%
            max-height: none
            width: 150px
            height: auto
            object-fit: cover
